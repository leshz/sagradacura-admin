{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "pluginOptions": {},
      "type": "string",
      "required": true,
      "unique": true
    },
    "price": {
      "pluginOptions": {},
      "type": "integer",
      "required": true
    },
    "pictures": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "brief_description": {
      "type": "string",
      "required": true
    },
    "full_description": {
      "type": "richtext"
    },
    "platform": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::platform.platform"
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "quantity": {
      "type": "integer",
      "default": 1
    }
  }
}
